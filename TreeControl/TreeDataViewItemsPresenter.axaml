<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:local="using:AS_Desktop2.UserControls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AS_Desktop2.UserControls.TreeDataViewItemsPresenter">
	<UserControl.Styles>
		<Style Selector="local|TreeDataViewItem[IsPointerOver=False]">
			<Setter Property="Background" Value="Transparent" />
		</Style>
		
		<Style Selector="local|TreeDataViewItem[IsPointerOver=True]">
			<Setter Property="Background" Value="#2bffffff" />
		</Style>

		<Style Selector="local|TreeDataViewItem[IsSelected=True]">
			<Setter Property="Background" Value="#a616a7ff" />
		</Style>
	</UserControl.Styles>
	
	<ItemsControl Name="ItemsControl" 
				  ItemsSource="{Binding $parent[UserControl].ItemsSource}">
		<ItemsControl.ItemTemplate>
			<DataTemplate>

				<StackPanel Name="PART_StackItemPresenter">
					<local:TreeDataViewItem />
				</StackPanel>

			</DataTemplate>
		</ItemsControl.ItemTemplate>
	</ItemsControl>
</UserControl>
